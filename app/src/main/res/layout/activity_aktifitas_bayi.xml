<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AktifitasBayi">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tolbar"
        app:title="Aktivitas Bayi"
        android:elevation="6dp"
        android:layout_width="match_parent"
        app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
        android:layout_height="wrap_content"/>


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh"
        android:background="#ECECEC"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:paddingBottom="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Switch
                android:id="@+id/status_aktif"
                android:layout_marginVertical="16dp"
                android:layout_marginRight="16dp"
                android:padding="16dp"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:switchPadding="12dp"
                android:text="Sensor Aktif"
                android:checked="true"/>

            <androidx.cardview.widget.CardView
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="6dp"
                android:elevation="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#0099DB"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bayi Menangis"
                        android:textColor="#FFF"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

                    <TextView
                        android:id="@+id/waktu_menangis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jumat, 1 January 2020\nJam 12:10:30"
                        android:textColor="#FFF000"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_marginTop="19dp"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="6dp"
                android:elevation="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#EF8B98"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bayi Mengompol"
                        android:textColor="#FFF"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

                    <TextView
                        android:id="@+id/waktu_mengompol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jumat, 1 January 2020\nJam 12:10:30"
                        android:textColor="#FFF000"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_marginTop="19dp"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="6dp"
                android:elevation="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#C0392B"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bayi Berbenturan"
                        android:textColor="#FFF"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

                    <TextView
                        android:id="@+id/waktu_bergerak"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jumat, 1 January 2020\nJam 12:10:30"
                        android:textColor="#FFF000"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>